---
import Layout from "../layouts/Layout.astro"
---

<Layout title="Store">
  <!-- Store Hero -->
  <section class="store-hero mw">
    <div class="store-hero-content">
      <span class="badge">Shop Now</span>
      <h1>Robokyn <span class="text-orange">Store</span></h1>
      <p>Precision-engineered gearboxes for your robotics projects. All products ship within 24 hours.</p>
    </div>

    <div class="filter-bar">
      <div class="filter-group">
        <label for="category">Category:</label>
        <select id="category" class="filter-select">
          <option value="all">All Products</option>
          <option value="cycloidal">Cycloidal Drives</option>
          <option value="harmonic">Harmonic Drives</option>
          <option value="lotus">Lotus Drives</option>
        </select>
      </div>

      <div class="filter-group">
        <label for="sort">Sort By:</label>
        <select id="sort" class="filter-select">
          <option value="featured">Featured</option>
          <option value="price-low">Price: Low to High</option>
          <option value="price-high">Price: High to Low</option>
          <option value="newest">Newest</option>
        </select>
      </div>

      <div class="search-box">
        <input type="search" placeholder="Search products..." class="search-input">
      </div>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="store-products mw">
    <div class="products-grid">
      <!-- Product 1 -->
      <article class="store-product-card">
        <div class="product-image-wrapper">
          <span class="product-badge best-seller">Best Seller</span>
          <img src="https://images.unsplash.com/photo-1718083272953-b171ae87b3d9?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="20:1 Micro Cycloidal Drive">
        </div>
        <div class="product-info">
          <h3>20:1 Micro Cycloidal Drive</h3>
          <p class="product-tagline">High Efficiency • 55g</p>
          <div class="product-specs">
            <span>Torque: 4-5Nm</span>
            <span>Size: 42×42×26mm</span>
          </div>
          <div class="product-footer">
            <div class="product-price">₹1,895</div>
            <button class="btn-add-cart">Add to Cart</button>
          </div>
        </div>
      </article>

      <!-- Product 2 -->
      <article class="store-product-card">
        <div class="product-image-wrapper">
          <span class="product-badge new">New</span>
          <img src="https://images.unsplash.com/photo-1718083272953-b171ae87b3d9?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="26:1 Micro Harmonic Drive">
        </div>
        <div class="product-info">
          <h3>26:1 Micro Harmonic Drive</h3>
          <p class="product-tagline">Compact Precision • 45g</p>
          <div class="product-specs">
            <span>Torque: 3-4Nm</span>
            <span>Size: 42×42×26mm</span>
          </div>
          <div class="product-footer">
            <div class="product-price">₹1,895</div>
            <button class="btn-add-cart">Add to Cart</button>
          </div>
        </div>
      </article>

      <!-- Product 3 -->
      <article class="store-product-card">
        <div class="product-image-wrapper">
          <img src="https://images.unsplash.com/photo-1718083272953-b171ae87b3d9?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="8:1 Micro Lotus Drive">
        </div>
        <div class="product-info">
          <h3>8:1 Micro Lotus Drive</h3>
          <p class="product-tagline">High Speed • 45g</p>
          <div class="product-specs">
            <span>Torque: 3-4Nm</span>
            <span>Size: 42×42×26mm</span>
          </div>
          <div class="product-footer">
            <div class="product-price">₹1,895</div>
            <button class="btn-add-cart">Add to Cart</button>
          </div>
        </div>
      </article>

      <!-- Product 4 -->
      <article class="store-product-card">
        <div class="product-image-wrapper">
          <img src="https://images.unsplash.com/photo-1718083272953-b171ae87b3d9?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="30:1 Cycloidal Drive">
        </div>
        <div class="product-info">
          <h3>30:1 Cycloidal Drive</h3>
          <p class="product-tagline">Maximum Torque • 62g</p>
          <div class="product-specs">
            <span>Torque: 6-8Nm</span>
            <span>Size: 42×42×26mm</span>
          </div>
          <div class="product-footer">
            <div class="product-price">₹2,195</div>
            <button class="btn-add-cart">Add to Cart</button>
          </div>
        </div>
      </article>

      <!-- Product 5 -->
      <article class="store-product-card">
        <div class="product-image-wrapper">
          <span class="product-badge limited">Limited Stock</span>
          <img src="https://images.unsplash.com/photo-1718083272953-b171ae87b3d9?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Motor Bundle">
        </div>
        <div class="product-info">
          <h3>BLDC Motor + Drive Bundle</h3>
          <p class="product-tagline">Complete Solution • 120g</p>
          <div class="product-specs">
            <span>Includes: Motor + Encoder</span>
            <span>Plug & Play</span>
          </div>
          <div class="product-footer">
            <div class="product-price">₹4,295</div>
            <button class="btn-add-cart">Add to Cart</button>
          </div>
        </div>
      </article>

      <!-- Product 6 -->
      <article class="store-product-card">
        <div class="product-image-wrapper">
          <img src="https://images.unsplash.com/photo-1718083272953-b171ae87b3d9?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Mounting Kit">
        </div>
        <div class="product-info">
          <h3>Universal Mounting Kit</h3>
          <p class="product-tagline">Hardware Pack • 15g</p>
          <div class="product-specs">
            <span>M3 Bolts & Spacers</span>
            <span>Fits All Drives</span>
          </div>
          <div class="product-footer">
            <div class="product-price">₹295</div>
            <button class="btn-add-cart">Add to Cart</button>
          </div>
        </div>
      </article>
    </div>
  </section>

  <!-- Store Info Banner -->
  <section class="store-info-banner mw">
    <div class="info-cards">
      <div class="info-card">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
        <h4>Fast Shipping</h4>
        <p>Orders ship within 24 hours</p>
      </div>

      <div class="info-card">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <path d="M12 6v6l4 2"></path>
        </svg>
        <h4>Quality Assured</h4>
        <p>100% tested before shipping</p>
      </div>

      <div class="info-card">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
          <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
        <h4>Warranty Included</h4>
        <p>6 months manufacturing warranty</p>
      </div>

      <div class="info-card">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
        </svg>
        <h4>Expert Support</h4>
        <p>Technical assistance available</p>
      </div>
    </div>
  </section>

<script>
  // Add to cart functionality
  const addToCartButtons = document.querySelectorAll('.btn-add-cart');
  
  addToCartButtons.forEach(el => {
    // Cast 'el' to HTMLButtonElement so TS knows it has .style and .textContent
    const button = el as HTMLButtonElement;

    button.addEventListener('click', () => {
      button.textContent = 'Added!';
      button.style.background = '#86efac';
      button.style.color = '#166534';
      
      setTimeout(() => {
        button.textContent = 'Add to Cart';
        button.style.background = '';
        button.style.color = '';
      }, 2000);
    });
  });
</script>

<style>
  /* Store Hero */
  .store-hero {
    padding: 2rem 1rem 3rem;
    text-align: center;
  }

  .store-hero-content h1 {
    font-size: 2.5rem;
    margin: 1rem 0;
  }

  .store-hero-content p {
    max-width: 600px;
    margin: 0 auto 2rem;
    opacity: 0.7;
  }

  /* Filter Bar */
  .filter-bar {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 2rem;
    padding: 1.5rem;
    background: color-mix(in srgb, var(--color-text), transparent 97%);
    border-radius: 12px;
  }

  .filter-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .filter-group label {
    font-weight: 600;
    font-size: 0.9rem;
    opacity: 0.8;
  }

  .filter-select {
    padding: 0.6rem 1rem;
    border: 1px solid color-mix(in srgb, var(--color-text), transparent 85%);
    border-radius: 8px;
    background: var(--color-bg);
    color: var(--color-text);
    font-family: 'Google Sans', sans-serif;
    cursor: pointer;
    transition: border-color 0.3s ease;
  }

  .filter-select:focus {
    outline: none;
    border-color: var(--color-orange);
  }

  .search-box {
    flex: 1;
    max-width: 300px;
  }

  .search-input {
    width: 100%;
    padding: 0.6rem 1rem;
    border: 1px solid color-mix(in srgb, var(--color-text), transparent 85%);
    border-radius: 8px;
    background: var(--color-bg);
    color: var(--color-text);
    font-family: 'Google Sans', sans-serif;
    transition: border-color 0.3s ease;
  }

  .search-input:focus {
    outline: none;
    border-color: var(--color-orange);
  }

  /* Products Grid */
  .store-products {
    padding: 3rem 1rem;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .store-product-card {
    background: var(--color-bg);
    border: 1px solid color-mix(in srgb, var(--color-text), transparent 85%);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .store-product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 32px color-mix(in srgb, var(--color-text), transparent 85%);
  }

  .product-image-wrapper {
    position: relative;
    width: 100%;
    height: 250px;
    background: color-mix(in srgb, var(--color-text), transparent 97%);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .product-image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .store-product-card:hover .product-image-wrapper img {
    transform: scale(1.05);
  }

  .product-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .product-badge.best-seller {
    background: #ffedd5;
    color: #9a3412;
  }

  .product-badge.new {
    background: #dbeafe;
    color: var(--color-orange);
  }

  .product-badge.limited {
    background: #fee2e2;
    color: #991b1b;
  }

  .product-info {
    padding: 1.5rem;
  }

  .product-info h3 {
    font-size: 1.1rem;
    margin: 0 0 0.5rem;
  }

  .product-tagline {
    font-size: 0.85rem;
    opacity: 0.6;
    margin: 0 0 1rem;
  }

  .product-specs {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: color-mix(in srgb, var(--color-text), transparent 97%);
    border-radius: 8px;
  }

  .product-specs span {
    font-size: 0.85rem;
    opacity: 0.8;
  }

  .product-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .product-price {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--color-orange);
  }

  .btn-add-cart {
    padding: 0.7rem 1.5rem;
    background: var(--color-text);
    color: var(--color-bg);
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.3s ease;
    white-space: nowrap;
  }

  .btn-add-cart:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px color-mix(in srgb, var(--color-text), transparent 70%);
  }

  /* Store Info Banner */
  .store-info-banner {
    padding: 3rem 1rem;
    background: color-mix(in srgb, var(--color-text), transparent 97%);
    border-radius: 16px;
    margin: 2rem auto;
  }

  .info-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .info-card {
    text-align: center;
  }

  .info-card svg {
    color: var(--color-orange);
    margin-bottom: 1rem;
  }

  .info-card h4 {
    font-size: 1rem;
    margin: 0.5rem 0;
  }

  .info-card p {
    font-size: 0.85rem;
    opacity: 0.7;
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .store-hero-content h1 {
      font-size: 2rem;
    }

    .filter-bar {
      flex-direction: column;
      align-items: stretch;
    }

    .filter-group {
      flex-direction: column;
      align-items: flex-start;
    }

    .filter-select {
      width: 100%;
    }

    .search-box {
      max-width: 100%;
    }

    .products-grid {
      grid-template-columns: 1fr;
    }

    .info-cards {
      grid-template-columns: 1fr;
    }
  }
</style>
</Layout>